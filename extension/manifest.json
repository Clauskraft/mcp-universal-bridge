{
  "manifest_version": 3,
  "name": "Real-Time Caption Capture",
  "version": "1.0.0",
  "description": "Generic real-time data capture for Teams, Zoom, Google Meet captions and more",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://teams.microsoft.com/*",
    "*://*.teams.microsoft.com/*",
    "*://zoom.us/*",
    "*://*.zoom.us/*",
    "*://meet.google.com/*",
    "*://*.meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://teams.microsoft.com/*",
        "*://*.teams.microsoft.com/*"
      ],
      "js": ["content-teams.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://zoom.us/*",
        "*://*.zoom.us/*"
      ],
      "js": ["content-zoom.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://meet.google.com/*",
        "*://*.meet.google.com/*"
      ],
      "js": ["content-meet.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
